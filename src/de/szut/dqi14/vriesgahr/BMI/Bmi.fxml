<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.101" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.szut.dqi14.vriesgahr.BMI.Controller">
    <GridPane>
        <ChoiceBox fx:id="choiceSex" prefHeight="25.0" prefWidth="151.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value=""/>
                    <String fx:value="MALE"/>
                    <String fx:value="FEMALE"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value=""/>
            </value>
            <tooltip>
                <Tooltip text="Enter your gender"/>
            </tooltip>
        </ChoiceBox>
        <TextField fx:id="textSize" onAction="#buttonActionEvent" promptText="Size in meter">
            <tooltip>
                <Tooltip text="Enter positive size in meters"/>
            </tooltip>
        </TextField>
        <TextField fx:id="textWeight" onAction="#buttonActionEvent" promptText="Weight in kg"
                   GridPane.columnIndex="1">
            <tooltip>
                <Tooltip text="Enter positive weight in kg"/>
            </tooltip>
        </TextField>
        <TextField fx:id="textAge" onAction="#buttonActionEvent" promptText="Age in years" GridPane.rowIndex="1">
            <tooltip>
                <Tooltip text="Enter positive age in years"/>
            </tooltip>
        </TextField>
    </GridPane>
    <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            mnemonicParsing="false" onAction="#buttonActionEvent" prefHeight="25.0" prefWidth="300.0"
            text="Calcualte your BMI"/>
</VBox>
